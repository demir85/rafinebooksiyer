@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Admin"))
    {
         <li class="scroll-to-section">
        <a class="nav-link text-dark" style="margin-top:-10%;" asp-controller="Album" asp-action="Albumler" > Admin</a>
    </li>
    }
    
    <li class="scroll-to-section">
        <a class="nav-link text-dark" style="margin-top:-5%;" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">şu anda buradasınız :)</a>
    </li>
        <li class="scroll-to-section">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Çıkış Yap</button>
        </form>
    </li>
}
else

{
    <li class="scroll-to-section" >
        <a class="nav-link text-dark" style="margin-top:-10%; " asp-area="Identity" asp-page="/Account/Register">Üye Ol</a>
    </li>
        <li class="scroll-to-section">
        <a class="nav-link text-dark" style="margin-top:-13%; margin-left:-25px;" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
    </li>
}

